<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_small"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/day_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:paddingStart="@dimen/margin_normal"
        android:gravity="center_vertical"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_normal" />

    <ImageView
        android:id="@+id/day_weather_image"
        android:layout_width="0dp"
        android:layout_height="@dimen/image_size_normal"
        android:layout_gravity="center"
        android:layout_weight="1"
        app:srcCompat="@drawable/day_partial_cloud" />

    <TextView
        android:id="@+id/day_temperature_value"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="@string/temperature_value"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_normal" />

    <TextView
        android:id="@+id/day_temperature_unit"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/temperature_unit"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/margin_normal"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_normal" />

</LinearLayout>